#include <iostream>
#include <string>
using namespace std;

int main() {
    string firstInput, secondInput, combined;

    for (int i = 0; i < 3; ++i) {
        cout << "Attempt " << (i + 1) << endl;

        cout << "Enter the first string: ";
        getline(cin, firstInput);

        cout << "Enter the second string: ";
        getline(cin, secondInput);

        combined = firstInput + secondInput;

        cout << "Concatenated string: " << combined << "\n\n";
    }

    return 0;
}
